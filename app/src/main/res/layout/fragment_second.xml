<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondFragment"
        android:background="@color/telegramDarkBackground">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp"
            android:gravity="center">
        <LinearLayout
                android:id="@+id/emoji_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/my_custom_background1"
                android:gravity="center"/>
        <LinearLayout
                android:id="@+id/status_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_custom_background"
                android:elevation="5dp"
                android:orientation="vertical"
                android:gravity="center"/>
    </LinearLayout>
        
   
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/BoilersViewList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/recycler_view_item"
            android:background="@color/telegramDarkBackground"
            android:layout_marginTop="?attr/actionBarSize"/>

    <Button
            android:id="@+id/button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous"
            android:layout_gravity="bottom|center_horizontal" android:visibility="invisible"/>
</FrameLayout>